<div id="<%= dom_id physician %>">
  <tr class="table-secondary">
    <td class="mw-px-50"><%= image_tag physician.image, class: "w-px-30 rounded-circle", style: "height: 30px" if physician.image.attached? %></td>
    <td><strong><%= physician.user.name %></strong></td>
    <td><%= number_to_phone_vi(physician.user.phone) %></td>
    <td><%= physician.speciality %></td>
    <td><%= physician.degree %></td>
    <td></td>
    <td>
      <div class="dropdown">
        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
          <i class="bi bi-three-dots-vertical"></i>
        </button>
        <div class="dropdown-menu">
          <%= link_to physician_path(physician), class: "dropdown-item" do %>
            <i class="bi bi-info-circle me-1"></i> Details
          <% end %>
          <%= link_to edit_physician_path(physician), class: "dropdown-item" do %>
            <i class="bi bi-pencil-square me-1"></i> Edit
          <% end %>
          <%= button_to physician, method: :delete, class: "dropdown-item" do %>
            <i class="bi bi-trash me-1"></i> Delete
          <% end %>
        </div>
      </div>
    </td>
  </tr>
</div>
