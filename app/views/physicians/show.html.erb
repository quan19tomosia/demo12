<p style="color: green">
  <%= notice %>
</p>

<div class="row">
  <div class="col-md-12">
    <div class="card mb-4">
    </div>
  </div>
  <div class="col-md mb-2">
    <div class="card h-100">
      <%= image_tag @physician.image, { class: "d-block rounded", height: "400", width: "400" } if @physician.image.attached? %>
      <div class="d-flex align-items-center mt-1 p-1">
        <div class="col-9">
          <p class="mb-0"><strong><%= @physician.user.name %></strong></p>
          <p class="mb-0"><small><%= number_to_phone_vi(@physician.user.phone) %></small></p>
        </div>
        <div class="col-3">
          <span>
            <i class="bi bi-star me-2" style="-webkit-text-stroke: 1px; color: #ee9b00"></i>
            <small><strong><%= rate(@physician) ? rate(@physician) : 'N/A' %></strong></small>
          </span>
          <p class="mb-0"><small>Appointments: <%= complete_count(@physician) %></small></p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md">
    <dl class="row mt-2">
      <dt class="col-sm-3">Email</dt>
      <dd class="col-sm-9"><%= @physician.user.email %></dd>
  
      <dt class="col-sm-3">Degree</dt>
      <dd class="col-sm-9"><%= @physician.degree %></dd>
  
      <dt class="col-sm-3">Education</dt>
      <dd class="col-sm-9"><%= @physician.education %></dd>
  
      <dt class="col-sm-3">Speciality</dt>
      <dd class="col-sm-9"><%= @physician.speciality %></dd>
  
      <dt class="col-sm-3 text-truncate">Experience</dt>
      <dd class="col-sm-9"><%= @physician.experience %></dd>
  
      <dt class="col-sm-3">About</dt>
      <dd class="col-sm-9"><%= @physician.about %></dd>
    </dl>
  </div>
</div>

<div class="d-flex justify-content-between">
  <%= button_to "Destroy this physician" , @physician, method: :delete, class: "btn btn-danger" %>
  <div>
    <%= link_to "Edit this physician" , edit_physician_path(@physician) %> |
    <%= link_to "Back to physicians" , physicians_path %>
  </div>
</div>
