<% link = pagy_link_proc(pagy) %>
<nav aria-label="Page navigation">
  <ul class="pagination pagination-sm justify-content-center">
    <% if pagy.prev %>
      <li class="page-item prev">
        <%== link.call(pagy.prev, '<i class="bi bi-chevron-left"></i>', 'class="page-link"') %>
      </li>
    <% else %>
      <li class="page-item prev disabled">
        <%== link.call(1, '<i class="bi bi-chevron-left"></i>', 'class="page-link"') %>
      </li>
    <% end %>
    <% pagy.series.each do |item| %>
      <% if item.is_a?(Integer) %>
        <li class="page-item">
          <%== link.call(item, item, 'class="page-link"') %>
        </li>
      <% elsif item.is_a?(String) %>
        <li class="page-item active">
          <%== link_to(item, "javascript:void(0)", class: "page-link") %>
        </li>
      <% elsif item == :gap %>
        <li class="page-item disabled">
          <%== link_to("...", "javascript:void(0)", class: "page-link") %>
        </li>
      <% end %>
    <% end %>
    <% if pagy.next %>
      <li class="page-item next">
        <%== link.call(pagy.next, '<i class="bi bi-chevron-right"></i>', 'class="page-link"') %>
      </li>
    <% else %>
      <li class="page-item next disabled">
        <%== link.call(pagy.last, '<i class="bi bi-chevron-right"></i>', 'class="page-link"') %>
      </li>
    <% end %>
  </ul>
</nav>