<% if current_user.id == message.user.id %>
  <div class="cont-me">
    <div class="msg msg-me">
      <div class="msg-header-me"><%= message.user.name %></div>
      <div class="msg-body"><%= message.body %></div>
    </div>
  </div>
<% else %>
  <div class="cont-msg">
    <div class="msg">
      <div class="msg-header"><%= message.user.name %></div>
      <div class="msg-body"><%= message.body %></div>
    </div>
  </div>
<% end %>