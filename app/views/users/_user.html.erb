<tr class="table-secondary">
  <td><%= image_tag user.avatar, class: "w-px-30 rounded-circle", style: "height: 30px" if user.avatar.attached? %></td>
  <td><strong><%= user.name %></strong></td>
  <td><%= user.email %></td>
  <td><%= number_to_phone_vi(user.phone) %></td>
  <td><span class="badge rounded-pill bg-<%= role_badge_class(user.role) %>"><%= user.role.capitalize %></span></td>
  <td><span class="badge rounded-pill bg-<%= lock_badge_class(user.access_locked?) %>"><%= user.access_locked? ? "Banned" : "Active" %></span></td>
  <td>
    <div class="dropdown">
      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
        <i class="bi bi-three-dots-vertical"></i>
      </button>
      <div class="dropdown-menu">
        
        <%= link_to "#", class: "dropdown-item" do %>
          <i class="bi bi-person-vcard me-1"></i> Profile
        <% end %>
        <%= link_to "#", class: "dropdown-item" do %>
          <i class="bi bi-pencil-square me-1"></i> Edit
        <% end %>
        <%= button_to "#", method: :delete, class: "dropdown-item" do %>
          <i class="bi bi-trash me-1"></i> Delete
        <% end %>
      </div>
    </div>
  </td>
</tr>