<%= form_with(model: appointment) do |form| %>
  <div class="mb-3">
    <%= form.label :service, "Services", class: "form-label" %>
    <%= form.collection_select :service_id, @services, :id, :name, {prompt: "Select a service"}, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :patient, "Patients", class: "form-label" %>
    <%= form.select :patient_id, @patients, { prompt: "Select a patient" }, { class: "form-select" } %>
    <div id="div-patient" style="display: none; background-color: red">
      patient
      <%# not done %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :physician, "Physicians", class: "form-label" %>
    <%= form.select :physician_id, @physicians, { prompt: "Select a physician" }, {class: "form-select"} %>
    <div id="div-physician" style="display: none; background-color: red">
      <label>physician</label>
      <%# not done %>
    </div>
  </div>
  <div class="mb-3 d-flex align-items-center", style="display: none" id="div-schedule">
    <%= form.label :schedule, "Schedule", class: "col-md-2 col-form-label" %>
    <%= form.date_field :schedule_day, min: Date.tomorrow, class: "form-control col-md"%>
    <%= form.select :schedule_time, options_for_select(["08:30", "09:30", "10:30"]), {}, { class: "form-select col-md", style: "display: none" } %>
  </div>

  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2>
        <%= pluralize(appointment.errors.count, "error" ) %> prohibited this appointment from being saved:
      </h2>
      <ul>
        <% appointment.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>

<%= javascript_include_tag 'appointment' %>